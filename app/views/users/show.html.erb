<div class="card text-center">
  <div class="card-header">
    Post del Usuario
  </div>
  <div class="card-body">
    <ol class="list-group list-group-numbered margin-bottom display-y">
      <% @posts.each do |post| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">
              <a href="<%= post['url'] %>">
                <%= post['title'] %>
              </a>
            </div>
            <%= post['description'] %>
          </div>
          <span class="badge bg-primary rounded-pill"><%= post['readable_publish_date'] %></span>
        </li>
      <% end %>
    </ol>
    <a href="<%= root_path %>" class="btn btn-outline-dark">Regresar</a>
  </div>
  <div class="card-footer text-muted">
    Datos obtenidos de <a href="https://dev.to/api/articles">dev.to</a>
  </div>
</div>